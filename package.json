{
  "name": "dimp",
  "private": true,
  "scripts": {
    "docker:build:auth": "docker build -f dimp-auth/Dockerfile -t dimp-auth .",
    "docker:build:bot": "docker build -f dimp-bot/Dockerfile -t dimp-bot .",
    "docker:build:dashboard": "docker build -f dimp-dashboard/Dockerfile -t dimp-dashboard .",
    "docker:build:server": "docker build -f dimp-server/Dockerfile --target server -t dimp-server .",
    "docker:build:server:migrate": "docker build -f dimp-server/Dockerfile --target migrate -t dimp-server-migrate .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "workspaces": [
    "dimp-auth",
    "dimp-bot",
    "dimp-dashboard",
    "dimp-server"
  ],
  "devDependencies": {
    "prettier": "^3.8.1"
  }
}
